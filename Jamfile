ALL_LOCATE_TARGET = temp ;

SubDir Fiber ;

SRCS = fiber.cpp main.cpp ;
if $(UNIX) || $(CYGWIN)
{
    CC   = g++ ;
    C++  = $(CC) ;
    LINK = $(CC) ;
}
if $(NT) || $(CYGWIN)
{
    SRCS += fiber_impl_win32.cpp ;
}
else if $(UNIX)
{
    SRCS += fiber_impl_linux.cpp ;
    LINKFLAGS += -lpthread ;
}

if $(TEST_MODE)
{
    C++FLAGS += -D$(TEST_MODE) ;
}

Main fiber : $(SRCS) ;
Clean clean : copy.cpp ;
