ALL_LOCATE_TARGET = temp ;

SubDir Fiber ;

if $(UNIX)
{
    CC   = g++ ;
    C++  = $(CC) ;
    LINK = $(CC) ;
}

if $(UNIX)
{
    C++FLAGS += [ FDefines FIBER_X86 ] [ FIncludes "include" - ] ;
    HDRS += "include" ;
    if $(DEBUG)
    {
        C++FLAGS += -g ;
    }
    LINKFLAGS += -lpthread ;
}

SubInclude Fiber src ;
SubInclude Fiber examples ;
